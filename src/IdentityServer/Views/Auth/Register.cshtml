@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Register Page</h1>

<form method="post" asp-action="Register" asp-controller="Auth">
    <input type="hidden" asp-for="ReturnUrl" />
    <div>
        <label>UserName </label>
        <input type="text" asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>
    <div>
        <label>Password </label>
        <input type="text" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label>Confirm Password </label>
        <input type="text" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <button type="submit">Sign Up</button>
</form>

<a asp-action="Login" asp-controller="Auth" asp-route-returnUrl="@Model.ReturnUrl">Go Back to Login</a>